extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.editVideo}`, method="post")
            input(type="text", placeholder="Title", name="title")
            textarea(placeholder="Description",name="description", cols="25", rows="3", wrap="hard")
            input(type="submit", value="Upload Video")
        a.form-container__link(href=`/videos${routes.deleteVideo}`) Delete Video